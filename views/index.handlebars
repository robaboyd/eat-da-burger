<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <h1>Eat-Da-Burger</h1>
    </div>
    <div class="col-xl-6">
      <h3>Burgers</h3>
      {{#each burgers}} 
        {{#unless this.devoured}}
        <pre>{{this.id}}. {{this.burger_name}}</pre>
        <form method="POST">
          <input type="text" value={{this.id}}>
          <button type="submit">Devour</button>
        </form>
				{{/unless}}
			  {{/each}}
    </div>
    <div class="col-xl-6">
      <h3>Devoured</h3>
      {{#each burgers}} 
        {{#if this.devoured}}
        <pre>{{this.id}}. {{this.burger_name}}</pre>
				{{/if}}
			  {{/each}}
    </div>
  </div>
			<form action="/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
</div>
